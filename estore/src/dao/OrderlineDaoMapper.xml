<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace是我们定义接口的全限定名字 这样就可以使用接口调用映射的SQL语句了 这个名字一定要和接口对应上-->
<mapper namespace="dao.OrderlineDaoMapper">


    <insert id="insertOrderLineAutoId">
        <selectKey keyProperty="id" resultType="int" order="BEFORE">
            select SEQ_EORDERLINEID.nextval from dual
        </selectKey>
        insert into E_ORDERLINE values (#{id},#{bookid},#{orderid},#{onumber})
    </insert>

    <select id="selectAllOrder" resultType="bean.Order">
        select * from E_ORDER
    </select>

    <select id="selectALlOrderByID" resultType="bean.Order">
        select * from E_ORDER where ID=#{orderid}
    </select>

    <select id="selectAddressByID" resultType="bean.Address">
        select * from E_ADDRESS where ID=#{addressId}
    </select>

    <select id="selectALlOrderlineByID" resultType="bean.Orderline">
        select * from E_ORDERLINE where ORDERID=#{orderid}
    </select>
</mapper>